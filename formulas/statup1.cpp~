#include <iostream>
#include <stdlib.h>
#include <ctime>
#include <math.h>

int statupfunc1(int stat1) //Takes in the first combatents stats
{
   //Performs calculation to get stat up
   srand(time(0));
   double base, max, chance = 0.0;
   int statup = 0;
   base = 1.02; //starting point for stat up
   max = 0.05; //maximum point for stat up
   chance = (float)rand()/RAND_MAX;
   statup = round(stat1*((base+max*chance)-1));
   return statup;
}
